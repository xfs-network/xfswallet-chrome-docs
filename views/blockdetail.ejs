<%- include('header'); -%> 
<h1 class="mb-4">Block <span class="fs-2">#<%= data.blk.height %></span></h1> 
<div class="card mb-4">
    <div class="card-header py-3">
        Block Detail
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item py-3">
            <div class="row">
                <div class="col-md-3">
                    Block Height:
                  </div>
                  <div class="col-md-9">
                    <div class="d-flex">
                      <%= data.blk.height %>
                    </div>
                  </div>
            </div>
        </li>
        <li class="list-group-item py-3">
            <div class="row">
                <div class="col-md-3">
                    Version:
                  </div>
                  <div class="col-md-9">
                    <%= data.blk.version %>
                  </div>
            </div>
        </li>
        <li class="list-group-item py-3">
            <div class="row">
                <div class="col-md-3">
                  Prev Block Hash:
                  </div>
                  <div class="col-md-9">
                    <%= data.blk.hash_prev_block %>
                  </div>
            </div>
        </li>
        <li class="list-group-item py-3">
            <div class="row">
                <div class="col-md-3">
                    Hash:
                  </div>
                  <div class="col-md-9">
                    <%= data.blk.hash %>
                  </div>
            </div>
        </li>
        <li class="list-group-item py-3">
            <div class="row">
                <div class="col-md-3">
                    Time:
                  </div>
                  <div class="col-md-9">
                    <%= data.blk.timestr %>
                  </div>
            </div>
        </li>
        <li class="list-group-item py-3">
          <div class="row">
              <div class="col-md-3">
                Coinbase:
                </div>
                <div class="col-md-9">
                  <%= data.blk.coinbase %>
                </div>
          </div>
      </li>
      <li class="list-group-item py-3">
        <div class="row">
            <div class="col-md-3">
              State Root Hash:
              </div>
              <div class="col-md-9">
                <%= data.blk.state_root %>
              </div>
        </div>
    </li>
    <li class="list-group-item py-3">
      <div class="row">
          <div class="col-md-3">
            Transactions Root Hash:
            </div>
            <div class="col-md-9">
              <%= data.blk.transactions_root %>
            </div>
      </div>
  </li>
  <li class="list-group-item py-3">
    <div class="row">
        <div class="col-md-3">
          Receipts Root Hash:
          </div>
          <div class="col-md-9">
            <%= data.blk.receipts_root %>
          </div>
    </div>
</li>
<li class="list-group-item py-3">
  <div class="row">
      <div class="col-md-3">
        Gas Limit:
        </div>
        <div class="col-md-9">
          <%= data.blk.gas_limit %>
        </div>
  </div>
</li>
<li class="list-group-item py-3">
  <div class="row">
      <div class="col-md-3">
        Gas Used:
        </div>
        <div class="col-md-9">
          <%= data.blk.gas_used %>
        </div>
  </div>
</li>
<li class="list-group-item py-3">
  <div class="row">
      <div class="col-md-3">
        Bits:
        </div>
        <div class="col-md-9">
          <%= data.blk.bits %>
        </div>
  </div>
</li>
<li class="list-group-item py-3">
  <div class="row">
      <div class="col-md-3">
        Nonce:
        </div>
        <div class="col-md-9">
          <%= data.blk.nonce %>
        </div>
  </div>
</li>
      </ul>
</div>
<div class="card">
  <div class="card-header">
    TRANSACTIONS
  </div>
  <div class="table-responsive p-2">
      <table class="table mb-0">
          <thead>
            <tr>
              <th>TX HASH</th>
              <th>Time</th>
              <th>From</th>
              <th>To</th>
              <th>Val</th>
            </tr>
          </thead>
          <tbody>
            <% if (data.blk.transactions === null || data.blk.transactions.length === 0) { %>
              <tr style="text-align: center;">
                <td colspan="5">
                  <div style="padding: 4rem 0;">
                    <div style="height: 2rem; color: rgba(0, 0, 0, .7); margin-bottom: 1rem;">
                      <svg xmlns="http://www.w3.org/2000/svg" height="100%" fill="currentColor" class="bi bi-box" viewBox="0 0 16 16">
                        <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5 8 5.961 14.154 3.5 8.186 1.113zM15 4.239l-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923l6.5 2.6zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464L7.443.184z"/>
                      </svg>
                    </div>
                    <h5>No data available</h5>
                  </div>
                </td>
              </tr>
            <% } else { %>
            <% for (let i=0; i < data.blk.transactions.length; i++) { %>
            <tr>
              <td>
                <div class="text-truncate" style="max-width: 240px;">
                  <a href="#">
                    <%= data.blk.transactions[i].hash %>
                  </a>
                </div>
              </td>
              <td>10 secs ago</td>
              <td>
                  <%= data.blk.transactions[i].from %>
              </td>
              <td>
                  <%= data.blk.transactions[i].to %>
              </td>
              <td>10 XFSC</td>
            </tr>
            <% }%>
            <% }%>
          </tbody>
        </table>
  </div>
</div>
<%- include('footer'); -%>